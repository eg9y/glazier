{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "out/**", ".next/**", "storybook-static/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {},
		"test": {
			"dependsOn": ["^build"]
		},
		"test:ci": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"]
		}
	}
}
